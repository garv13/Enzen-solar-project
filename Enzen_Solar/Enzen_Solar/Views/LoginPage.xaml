<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Enzen_Solar.Views.LoginPage" 
             Title="Login">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Solar Funds" FontSize="Large" HorizontalOptions="Start" VerticalOptions="Start" TextColor="#E6A312" FontAttributes="Bold"/>
            <Entry x:Name="UsernameEntry" Placeholder="Username"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button x:Name="LoginButton" Text="Login"
                VerticalOptions="Center" 
                HorizontalOptions="Center"  Clicked="LoginButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>