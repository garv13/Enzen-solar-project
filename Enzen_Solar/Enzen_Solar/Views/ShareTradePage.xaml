<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Enzen_Solar.Views.ShareTradePage" Title="Share Trade">
    <ContentPage.Content>
        <Grid x:Name="MainGrid" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Label Text="New Shares" HorizontalOptions="Start" FontSize="Large"/>
            <ListView x:Name="lstViewNew" RowHeight="60" ItemsSource="{Binding NewShareListViewObj}" Grid.Row="1" BackgroundColor="#E5E5E5">
                <ListView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text = "Quantity" FontSize="Medium" HorizontalOptions="Center"/>
                        <Label Text = "Rate" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                        <Label Text = "Qty Purchase" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text = "{Binding ListQuantity}" FontSize="Medium" HorizontalOptions="Center"/>
                                <Label Text = "{Binding ListRate}" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                                <Entry Text = "{Binding QuantityPurchase}" Placeholder="Qty" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                                <Button Text="Buy" Command="{Binding BuyCommand}" FontSize="Medium" CommandParameter="{Binding .}" Grid.Column="3" HorizontalOptions="Center" BackgroundColor="#FF9494"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Secondary Market" HorizontalOptions="Start" Grid.Row="2" FontSize="Large"/>

            <ListView x:Name="lstViewSecondary" RowHeight="60" ItemsSource="{Binding SecondaryShareListViewObj}" Grid.Row="3" BackgroundColor="#E5E5E5">
                <ListView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text = "Quantity" FontSize="Medium" HorizontalOptions="Center"/>
                        <Label Text = "Rate" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                        <Label Text = "Qty Purchase" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text = "{Binding ListQuantity}" FontSize="Medium" HorizontalOptions="Center"/>
                                <Label Text = "{Binding ListRate}" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                                <Entry Text = "{Binding QuantityPurchase}" Placeholder="Qty" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                                <Button Text="Buy" Command="{Binding BuyCommand}" FontSize="Medium" CommandParameter="{Binding .}" Grid.Column="3" HorizontalOptions="Center" BackgroundColor="#FF9494"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="My Shares" HorizontalOptions="Start" Grid.Row="4" FontSize="Large"/>

            <ListView x:Name="lstViewMyShare" RowHeight="60" ItemsSource="{Binding MyShareListViewObj}" Grid.Row="5" BackgroundColor="#E5E5E5">
                <ListView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <Label Text = "Quantity" FontSize="Medium" HorizontalOptions="Center" Grid.Column="0"/>
                        <Label Text = "Qty Sell" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                        <Label Text = "Rate" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.25*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text = "{Binding ListQuantity}" FontSize="Medium" HorizontalOptions="Center" Grid.Column="0"/>
                                <Entry Text = "{Binding QuantityPurchase}" Placeholder="Qty" FontSize="Medium" HorizontalOptions="Center" Grid.Column="1"/>
                                <Entry Text = "{Binding PurchaseRate}" Placeholder="Rate" FontSize="Medium" HorizontalOptions="Center" Grid.Column="2"/>
                                <Button Text="Sell" Command="{Binding SellCommand}" FontSize="Medium" CommandParameter="{Binding .}" Grid.Column="3" HorizontalOptions="Center" BackgroundColor="#94DAB2"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>